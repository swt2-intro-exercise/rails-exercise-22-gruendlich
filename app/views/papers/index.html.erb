<p style="color: green"><%= notice %></p>

<h1>Papers</h1>

<div id="papers">
  <% @papers.each do |paper| %>
    <%= render paper %>
    <div>
      <%= link_to "Show this paper", paper %> |
      <%= link_to "Edit this paper", edit_paper_path(paper) %> |
      <%= link_to 'Delete', paper_path(paper), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  <% end %>
</div>

<%= link_to "New paper", new_paper_path %>
